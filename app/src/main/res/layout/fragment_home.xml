<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".telasaluno.HomeFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logo2" />

    <TextView
        android:id="@+id/txtBemVindo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/saira"
        android:gravity="center"
        android:textColor="@color/Cor01"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtSeuPersonal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/saira"
        android:gravity="center"
        android:text="Seu personal:"
        android:textColor="@color/Cor01"
        android:textSize="18sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txtNomePersonal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/saira"
        android:gravity="center"
        android:textColor="@color/Cor01"
        android:textSize="18sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txtSeuIdPersonal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/saira"
        android:gravity="center"
        android:text="Seu id de personal:"
        android:textColor="@color/Cor01"
        android:textSize="18sp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/LinearLayoutCopiarID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/txtIdPersonal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="id Personal"
            android:textColor="@color/Cor01"
            />

        <Button
            android:id="@+id/btnCopiar"
            style="?attr/materialIconButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/baseline_content_copy" />
    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="10dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/duotone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Treine"
                    android:textColor="#FFFFFF"
                    android:textSize="60sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BodyGym"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />
            </LinearLayout>
    </com.google.android.material.card.MaterialCardView>


</LinearLayout>